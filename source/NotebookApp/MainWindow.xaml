<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Horker.Notebook.Models;assembly=Horker.Notebook"
        xmlns:Views="clr-namespace:Horker.Notebook.Views;assembly=Horker.Notebook" x:Class="Horker.Notebook.MainWindow"
        mc:Ignorable="d"
        Title="{Binding ElementName=SessionControl, Path=ViewModel.TitleString}" Width="{x:Static models:Configuration.WindowWidth}" Height="900" Closed="Window_Closed">
    <Grid>

        <Views:Session x:Name="SessionControl" Loaded="Session_Loaded"/>

    </Grid>
</Window>
